{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ES6",
      "DOM"
    ],
    "types": [
      "@homebridge/plugin-ui-utils/dist/ui.interface"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/homebridge-ui/public/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}